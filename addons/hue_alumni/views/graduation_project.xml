<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!--graduation_project_tree_view-->
		<record id="graduation_project_tree_view" model="ir.ui.view">
			<field name="name">graduation project</field>
			<field name="model">hue.graduation.project</field>
			<field name="arch" type="xml">
				<tree string="graduation project">
					<field name="course_id"/>
					<field name="name"/>
					<field name="en_name"/>
					<field name="academic_year_id"/>
					<field name="semester_id"/>
				</tree>
			</field>
		</record>
		<!--graduation_project_form_view-->
		<record id="graduation_project_form_view" model="ir.ui.view">
			<field name="name">graduation project</field>
			<field name="model">hue.graduation.project</field>
			<field name="arch" type="xml">
				<form string="graduation project">
					<header>
						<button name="button_done" string="Finish" class="oe_highlight" type="object" invisible="state=='done'"/>
						<button name="get_draft" string="set draft" class="oe_highlight" type="object" invisible="state=='draft'" groups="hr_extention.group_service_manager"/>
						<field name="state" widget="statusbar" statusbar_visible="draft,done"/>
					</header>
					<sheet>
						<group col="4">
							<field name="course_id" readonly="state=='done'"/>
							<field name="name"  readonly="state=='done'"/>
							<field name="en_name"  readonly="state=='done'"/>
							<field name="academic_year_id" options="{'no_open': True,'no_quick_create':True,'no_create_edit':True}"  readonly="state=='done'"/>
							<field name="semester_id" options="{'no_open': True,'no_quick_create':True,'no_create_edit':True}"  readonly="state=='done'"/>
						</group>
						<notebook>
							<page string="Students">
								<field name="student_ids"
                                       options="{'no_open': True}"  readonly="state=='done'">
									<tree limit="20" string="Students" class="student_ids" editable="bottom"
                                          options="{'no_open': True}">
										<field name="student_id" options="{'no_open': True,'no_quick_create':True,'no_create_edit':True}"/>
										<field name="student_code"/>
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
						<field name="message_ids" widget="mail_thread"/>
					</div>
				</form>
			</field>
		</record>
		<!--graduation_project_action-->
		<record model="ir.actions.act_window" id="graduation_project_action">
			<field name="name">graduation project</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">hue.graduation.project</field>
			<field name="view_mode">tree,form</field>
		</record>
	</data>
</odoo>