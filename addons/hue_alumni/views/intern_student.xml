<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!--intern_student_tree_view-->
		<record id="intern_student_tree_view" model="ir.ui.view">
			<field name="name">Intern Students</field>
			<field name="model">intern.student</field>
			<field name="arch" type="xml">
				<tree string="Intern Students">
					<field name="course_id" options="{'no_open': True,'no_quick_create':True,'no_create_edit':True}"/>
					<field name="student_id" options="{'no_open': True,'no_quick_create':True,'no_create_edit':True}" />
					<field name="student_code" />
					<field name="alumni_academic_year" />
					<field name="alumni_semster" />
					<field name="total_months" />
					<field name="internal_months" />
					<field name="external_months" />
					<field name="core_months" />
					<field name="elective_months" />
				</tree>
			</field>
		</record>
		<!--intern_student_form_view-->
		<record id="intern_student_form_view" model="ir.ui.view">
			<field name="name">Intern Students</field>
			<field name="model">intern.student</field>
			<field name="arch" type="xml">
				<form string="Intern Students" >
					<header>
						<button name="button_graduate" string="Graduate" class="oe_highlight" type="object"
                        invisible="state=='graduate'"/>
						<button name="button_draft"
                                string="set to draft" class="oe_highlight" type="object"
                                invisible="state=='dodraftne'" groups="hr_extention.group_service_manager" />
						<field name="state" widget="statusbar" statusbar_visible="draft,graduate"/>
					</header>
					<sheet>
						<group col="4">
							<field name="course_id" options="{'no_create': True, 'no_create_edit':True,'no_open': True}" readonly="state=='graduate'"/>
							<field name="student_id" options="{'no_open': True,'no_quick_create':True,'no_create_edit':True}" readonly="state=='graduate'"/>
							<field name="student_code"  readonly="state=='graduate'"/>
							<field name="alumni_academic_year" readonly="state=='graduate'"/>
							<field name="alumni_semster" readonly="state=='graduate'"/>
							<field name="total_months" />
							<field name="internal_months" />
							<field name="external_months" />
							<field name="core_months" />
							<field name="elective_months" />
						</group>
						<notebook>
							<page string="Internships List">
								<field name="note_list" options="{'no_open': True}" readonly="state=='graduate'">
									<tree limit="80" string="Internships List" class="note_list" editable="bottom" options="{'no_open': True}">
										<field name="date_from"/>
										<field name="date_to" options="{'no_open': True}"/>
										<field name="month_count"/>
										<field name="training_place"  options="{'no_open': True}"/>
										<field name="department_id"  options="{'no_open': True}"/>
										<field name="elective_department"/>
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
						<field name="message_ids" widget="mail_thread"/>
					</div>
				</form>
			</field>
		</record>
		<!--intern_students_action-->
		<record model="ir.actions.act_window" id="intern_action">
			<field name="name">Intern Students</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">intern.student</field>
			<field name="view_mode">tree,form</field>
		</record>
	</data>
</odoo>