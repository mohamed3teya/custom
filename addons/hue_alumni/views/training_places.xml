<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <!--training_places_tree_view-->
        <record id="training_places_tree_view" model="ir.ui.view">
            <field name="name">training places</field>
            <field name="model">hue.training.places</field>
            <field name="arch" type="xml">
                <tree string="Training places">
                    <field name="name"/>
                    <field name="en_name"/>
                    <field name="training_type"/>
                </tree>
            </field>
        </record>
        <!--training_places_form_view-->
        <record id="training_places_form_view" model="ir.ui.view">
            <field name="name">training places</field>
            <field name="model">hue.training.places</field>
            <field name="arch" type="xml">
                <form string="Training places" >
                    <sheet>
                        <group col="4">
                            <field name="name"/>
                            <field name="en_name"/>
                            <field name="training_type" />
                        </group>      
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
		<!--alumni_students_action-->
		<record model="ir.actions.act_window" id="training_places_action">
			<field name="name">Training places</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">hue.training.places</field>
			<field name="view_mode">tree,form</field>
		</record>
	</data>
</odoo>