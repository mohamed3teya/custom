<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="student_attendance_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.internal_layout">
                    <div class="page">
                        <style>
                            @media print {
                            .btn-print {
                            display:none;
                            }
                            }

                        </style>
                        <t t-if="report == True">
                        <button style=" border-radius: 0.6em;border-color:#00438b;background-color:#00438b;color:#B68914;font-weight: bold;padding: 5px; margin-bottom: 10px;    padding-left: 15px;padding-right: 15px;"
                                onclick="javascript:window.print()" class="btn-print">Print
                        </button>

                        <br/>
                        </t>
                        <t t-if="report == True">
                        <table style="border:1px;" class="table table-striped table-bordered">
                            <tr>
                                <td class="text-center">
                                    <span style="font-size: 18px;">Student name</span>
                                    :
                                    <span style="font-size: 16px;" t-esc="docs.student_id.name"/>
                                </td>
                                <td class="text-center">
                                    <span style="font-size: 18px;">Student code</span>
                                    :
                                    <span style="font-size: 16px;" t-esc="docs.student_code"/>
                                </td>
                            </tr>


                        </table>
                        </t>
                            <table class="table table-bordered table-condensed">
                                <thead>
                                    <tr style='background:#f4f5f7;'>
                                        <th style='width:5%'>#</th>
                                        <th style='width:9%'>Subject Code</th>
                                        <th>Subject Name</th>
                                        <th>Dates</th>
                                        <th style='width:15%'>Absence #</th>
                                        <th style='width:15%'>Total #</th>
                                        <th style='width:15%'>%</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="totalCH" t-value="0"/>
                                    <t t-foreach="subjects" t-as="subject">
                                        <t t-set="totalCH" t-value="totalCH+1"/>
                                        <tr style='background:#f4f5f7;'>
                                            <td>
                                                <B>
                                                    <span t-esc="totalCH"/>
                                                </B>
                                            </td>
                                            <td>
                                                <B>
                                                    <span t-esc="subject['subject'].code"/>
                                                </B>
                                            </td>
                                            <td>
                                                <B>
                                                    <span t-esc="subject['subject'].name"/>
                                                </B>
                                            </td>
                                            <td>
                                                <B>
                                                    <t t-foreach="subject['attendance_lines']" t-as="line">
                                                        <span t-esc="line.attendance_date"/>
                                                        <span t-esc="line.attendance_id.session_id.session_type"/>
                                                        <font color="green">
                                                            <span t-if="line.permitted">Permitted</span>
                                                            <span t-esc="line.leave"/>
                                                            <span t-esc="line.absence_reason"/>
                                                        </font>
                                                        <br/>
                                                    </t>
                                                </B>
                                            </td>
                                            <td>
                                                <B>
                                                    <span t-esc="subject['absence_count']"/>
                                                </B>
                                            </td>
                                            <td>
                                                <B>
                                                    <span t-esc="subject['all_count']"/>
                                                </B>
                                            </td>
                                            <td>
                                                <B><span t-esc="subject['percentage']"/>%
                                                </B>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
<!--                        </div>-->

                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>