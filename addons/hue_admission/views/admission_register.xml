<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="res_partner_view_form" model="ir.ui.view">
            <field name="name">op.admission.register</field>
            <field name="model">op.admission.register</field>
            <field name="inherit_id" ref="openeducat_admission.view_op_admission_register_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="replace">
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,application,admission,done"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="identifier"/>
                    <field name="hue_admission_id"/>
                </xpath>
                <xpath expr="//field[@name='minimum_age_criteria']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
                <xpath expr="//field[@name='academic_term_id']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
                <xpath expr="//field[@name='academic_years_id']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
                <xpath expr="//page[1]" position="replace">
                    <page string="Applications" name="applications">    
                        <field name="admission_ids" nolabel="1" readonly="1"/>
                    </page>
                </xpath>
                
            </field>
        </record>
    </data>
</odoo>