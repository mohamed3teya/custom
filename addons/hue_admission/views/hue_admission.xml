<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    <record id="view_op_hue_admission_tree" model="ir.ui.view">
            <field name="name">Horus Admissions</field>
            <field name="model">op.hue.admission</field>
            <field name="arch" type="xml">
                <tree string="Horus Admissions">
                            <field name='name'/>
                            <field name='active_admission'/>
                            <field name='join_year_id'/>
                            <field name='semster_id'/>
                            <field name='std_status_id'/>
                </tree>
            </field>
        </record>    
        <record id="view_op_hue_admission_form" model="ir.ui.view">
            <field name="name">Horus Admission</field>
            <field name="model">op.hue.admission</field>
            <field name="arch" type="xml">
                <form string="Horus Admissions">
                    <sheet>
                        <group>
                            <field name='name'/>
                            <field name='join_year_id'/>
                            <field name='semster_id'/>
                            <field name='std_status_id'/>
                            <field name='active_admission'/>
                        </group>
                        <div class="o_horizontal_separator">Admission Register</div>
                        <field name="admission_register_ids" string="Admission Register">
                            <tree string="Admission Register">
                                <field name="name"/>
                                <field name="hue_admission_id"/>
                                <field name="course_id"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="min_count"/>
                                <field name="max_count"/>
                                <field name="product_id"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_hue_open_op_horus_admission">
            <field name="name">Horus Admission</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">op.hue.admission</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
        </record> 
    </data>
</odoo>