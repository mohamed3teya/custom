<odoo>
    <data>
        <template id="student_password_view">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="font">
                        <div class="page">
                            <style>
                            body {
                                    -webkit-print-color-adjust: exact !important!important ;
                                }
                            </style>
                            <br/>
                            <div class="block">
                                <table style="table-layout: auto; background-position: center;
                                                background-color: #fff;width: 350px;height: 200px;margin: auto;border-collapse: collapse;  " class="table-bordered password">
                            <tbody>
                            <tr>
                                <td style="font-size:20px;color: #000;border:1px solid #00438b;" width="30%">
                                    <span style="font-weight: bold;padding-left: 5px;">Url:</span>                                                         
                                                
                                </td>
                                <td style="font-size:17px;color: #000;border:1px solid #00438b;" width="70%">
                                     <!-- <span style="padding-left: 5px;">www.horus.edu.eg</span> -->
                                </td>
                                </tr>
                                <tr>
                                    <td style="font-size:20px;color: #000;border:1px solid #00438b;" width="30%">
                                        <span style="font-weight: bold;padding-left: 5px;">Name:</span>
                                    </td>
                                        <td style="font-size:17px;color: #000;border:1px solid #00438b;" width="70%">                              
                                                    <span style="padding-left: 5px;" t-esc='docs.student_id.en_name'/>                                         
                                    </td>
                                </tr>
                                <tr>    
                                    <td style="font-size:20px;color: #000;border:1px solid #00438b;" width="30%">
                                                <span style="font-weight: bold;padding-left: 5px;">Username:</span>
                                    </td>
                                    <td style="font-size:17px;color: #000;border:1px solid #00438b;" width="70%">
                                                    <span style="padding-left: 5px;"  t-esc="docs.student_id.student_code"/>
                                                    <span>@horus.edu.eg</span>
                                    </td>
                                </tr>
                                            <tr>
                            
                                    <td style="font-size:20px;color: #000;border:1px solid #00438b;" widtd="30%">         
                                                    <span style="font-weight: bold;padding-left: 5px;">Password:</span>
                                    </td>
                                        <td style="font-size:17px;color: #000;border:1px solid #00438b;" width="70%">         
                                                    <span style="padding-left: 5px;" t-esc='docs.student_id.password'/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>
         <record id="action_report_student_password" model="ir.actions.report">
            <field name="name">student password</field>
            <field name="model">op.student</field>
            <field name="report_type">qweb-html</field>
            <field name="report_name">hue_student_reports_yasmin.student_password_view</field>
            <field name="report_file">hue_student_reports_yasmin.student_password_view</field>
        </record>
    </data>
</odoo>
