<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="student_portal_main_layout">
            <meta
                    content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no"
                    name="viewport"
            />
            <!-- ******** @ALL PAGES **********  -->

            <!-- Bootstrap 3.3.7 CDN CSS -->
            <!-- <link
                    rel="stylesheet"
                    href="/hue_student_portal/static/css/bootstrap.min.css"
            /> -->
            <!-- Bootstrap CSS -->
            <link rel="stylesheet"
                href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
                integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
                crossorigin="anonymous"/>
            <!-- Font Awesome 4.7.0 -->

            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css"/>

            <!-- preloadPage  -->
            <link rel="stylesheet" href="/hue_student_portal/static/front/css/_loaderPage.css"/>

            <!-- normalize  used with preloader  -->
            <link rel="stylesheet" href="/hue_student_portal/static/front/css/_normalize.css"/>

            <!-- Theme  Admin Default Main style  -->
            <link rel="stylesheet" href="/hue_student_portal/static/front/css/_adminDefault.min.css"/>

            <!-- _horus Skin  css  only colors -->
            <link rel="stylesheet" href="/hue_student_portal/static/front/css/_horusSkin.css"/>

            <!-- preloadPage helper  -->
            <script src="/hue_student_portal/static/front/js/modernizr-2.6.2.min.js"></script>

            <!-- fonts google  -->
            <link rel="preconnect" href="https://fonts.gstatic.com"/>
            <link
                    href="https://fonts.googleapis.com/css2?family=Almarai:wght@300;700&amp;family=Odibee+Sans&amp;family=Work+Sans:wght@400;600&amp;display=swap"
                    rel="stylesheet"
            />


            <!-- JSON test only For page   db.data replace -->
            <script src="/hue_student_portal/static/front/js/pages/mainOBJ.js"></script>

            <!-- iCheck for checkboxes and radio inputs -->
            <link rel="stylesheet" href="/hue_student_portal/static/front/plugins/iCheck/all.css"/>
            <!--  css only For registration page  -->
            <link rel="stylesheet" href="/hue_student_portal/static/front/css/pages/registration.css"/>
            <style>
                span i.fa {
                line-height: 90px !important;
                }
            </style>
            <t t-set="is_portal" t-value="True"/>


            <body class="hold-transition fixed skin-hours sidebar-mini">
                <!-- @Preloader -->
                <div id="loader-wrapper">
                    <img
                            id="img-loader"
                            class="animate-flicker"
                            src="/hue_student_portal/static/front/img/logomini.png"
                    />
                    <div id="loader"></div>
                    <h2 id="f-title-loader" class="animate-flicker">HUE</h2>
                    <h2 id="s-title-loader" class="animate-flicker">
                        HORUS UNIVERSITY - EGYPT
                    </h2>
                    <div class="loader-section section-left"></div>
                    <div class="loader-section section-right"></div>
                </div>
                <!-- ./Preloader -->
                <div class="wrapper">
                    <!-- Main header -->
                    <header class="main-header">
                        <!-- Logo -->
                        <a href="index.html" class="logo">
                            <!-- mini logo for sidebar mini 50x50 pixels -->
                            <span class="logo-mini">
                                <img src="/hue_student_portal/static/front/img/logomini.png"/>
                            </span>
                            <!-- logo for regular state and mobile devices -->
                            <span class="logo-lg">MC Academy</span>
                        </a>
                        <!-- Header Navbar -->
                        <nav class="navbar navbar-static-top">
                            <!-- Sidebar toggle button-->
                            <a
                                    href="#"
                                    class="sidebar-toggle"
                                    data-toggle="push-menu"
                                    role="button"
                            >
                                <span class="sr-only">Toggle navigation</span>
                            </a>

                            <div class="navbar-custom-menu">
                                <ul class="nav navbar-nav">
                                    <!-- User Account -->
                                    <li class="dropdown user user-menu">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                            <!-- comment this for testing -->
                                            <!-- <img t-if="user_id.image_1920" class="user-image" t-att-src="'data:image/png;base64,%s' % to_text(user_id.image_1920)" alt="image"/> -->
                                            <img  t-if="not user_id.image_1920"
                                                    src="/hue_student_portal/static/front/img/user.png"
                                                    class="user-image"
                                                    alt="logo Image"
                                            />
                                            <span class="hidden-xs"><span t-esc="user_id.name[:20] + '...' if user_id.name and len(user_id.name) &gt; 20 else user_id.name"/></span>
                                        </a>
                                        <ul class="dropdown-menu">
                                            <!-- User image -->
                                            <li class="user-header">
                                            <!-- comment this for testing -->
                                            <!-- <img t-if="user_id.image_1920" class="img-circle" t-att-src="'data:image/png;base64,%s' % to_text(user_id.image_1920)" alt="image"/> -->
                                            <img  t-if="not user_id.image_1920"
                                                    src="/hue_student_portal/static/front/img/user.png"
                                                    class="img-circle"
                                                    alt="logo Image"
                                            />
                                                <p>
                                                    <span t-esc="user_id.name[:30] + '...' if user_id.name and len(user_id.name) &gt; 30 else user_id.name"/>
                                                    <small><span t-esc="user_id.email"/></small>
                                                </p>
                                            </li>
                                            <!-- Menu Body -->
                                            <li class="user-body">
                                                <!-- /.row -->
                                            </li>
                                            <!-- Menu Footer-->
                                            <li class="user-footer">
                                                <div class="pull-left">
                                                </div>
                                                <div class="pull-right">
                                                    <a class="btn btn-default btn-flat" data-menu="logout" href="https://login.microsoftonline.com">Sign out</a>
                                                </div>
                                            </li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        </nav>
                    </header>
                    <!-- ./Main header -->

                    <!-- @Main Sidebar -->
                    <t t-call="hue_student_portal.menu" groups="base.group_portal"/>
                    <!-- ./Main Sidebar -->

                    <!-- Content Wrapper. Contains page content -->
                    <div class="content-wrapper">
                        <t t-raw="0"/>
                    </div>
                    <!-- /.content-wrapper -->

                    <!-- Control Sidebar -->
                    <aside class="control-sidebar control-sidebar-dark">
                        <!-- Control sidebar content goes here -->
                    </aside>
                    <!-- /.control-sidebar -->
                </div>
                <!-- ./wrapper -->
                <!-- jQuery -->
                <!-- **** include for all pages ****-->

                <!-- jQuery 3.4.1 -->
                <script src="/hue_student_portal/static/front/js/jquery-3.4.1.min.js" ></script>
                <!-- Added for test -->
                <!-- Optional JavaScript -->
                <!-- jQuery first, then Popper.js, then Bootstrap JS -->
                <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
                <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
                <!-- end of add -->
                <!-- Bootstrap 3.3.7 CDN JS -->
                <script src="/hue_student_portal/static/front/js/bootstrap.min.js" ></script>

                <!-- Admin Default.min App js -->
                <script src="/hue_student_portal/static/front/js/AdminDefault.min.js"></script>

                <!-- loading page js  -->
                <script src="/hue_student_portal/static/front/js/preloader.js"></script>


                <!-- sidebar toggle menu -->
                <script src="/hue_student_portal/static/front/js/sidebar.js"></script>

                <!-- ./ include for all pages Ended -->


                <!-- only this Page js -->
                <!-- ChartJS -->
                <script src="/hue_student_portal/static/front/plugins/chartjs/chart.js"></script>
                <t t-if="active == 'dashboard'">
                    <script src="/hue_student_portal/static/front/plugins/chartjs/CustChart.js"></script>
                </t>

                <!-- iCheck 1.0.1 -->
                <script src="/hue_student_portal/static/front/plugins/iCheck/icheck.min.js"></script>
                <!-- fullcalendar run &&  #sessions Data getter   -->
                <script src="/hue_student_portal/static/front/js/pages/registration-coursesDetails.js"></script>
            </body>

        </template>


        <template id="container" name="container">
            <div class="main-panel">
                <div class="content">
                    <div class="page-inner">
                        <div class="page-category">

                            <t t-raw="0"/>
                        </div>
                    </div>
                </div>
                <footer class="footer">
                    <div class="container-fluid">
                        <div class="copyright ml-auto">
                            2019, All right reserved
                            <a href="https://www.horus.edu.eg">Horus University IT Department</a>
                        </div>
                    </div>
                </footer>
            </div>

        </template>
    </data>
</odoo>
