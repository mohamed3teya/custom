<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <!--alumni_service_tree_view-->
        <record id="alumni_service_tree_view" model="ir.ui.view">
            <field name="name">hue alumni service</field>
            <field name="model">hue.alumni.service</field>
            <field name="arch" type="xml">
                <tree string="alumni Service" >        
                    <field name="course_id"/>
                    <field name="service_id"/>
                    <field name="alumni_academicyear_id"/>
                    <field name="alumni_semester_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <!--alumni_service_form_view-->
        <record id="alumni_service_form_view" model="ir.ui.view">
            <field name="name">hue alumni service form</field>
            <field name="model">hue.alumni.service</field>
            <field name="arch" type="xml">
                <form string="alumni Service">
                    <header> 
                    <button name="create_service" string="Create Service" style="color: #fff;" 
                            class="oe_highlight" type="object"
                            invisible="state in ['confirm','done']"/>
                    <!--<button name="create_invoice" string="Create Invoice" style="background-color: #bcdfbc;color: #000;" type="object" attrs="{'invisible': [('state',  '=', 'done')]}"/>-->                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                    </header>
                    <sheet> 
                        <group col="4">
                            <field name="course_id" options="{'no_open': True,'no_quick_create':True,'no_create_edit':True}"/>
                            <field name="service_id" options="{'no_open': True,'no_quick_create':True,'no_create_edit':True}"/>
                            <field name="alumni_academicyear_id" options="{'no_open': True,'no_quick_create':True,'no_create_edit':True}"/>
                            <field name="alumni_semester_id" options="{'no_open': True,'no_quick_create':True,'no_create_edit':True}"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"
                            groups="base.group_user" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>
        <!--Actions-->
		<record model="ir.actions.act_window" id="alumni_service_action">
			<field name="name">alumni Service</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">hue.alumni.service</field>
			<field name="view_mode">tree,form</field>
		</record>
	</data>
</odoo>