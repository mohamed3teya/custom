<odoo>
	<data>
        <!--course_department_tree-->
        <record id="course_department_tree_view" model="ir.ui.view">
            <field name="name">hue course department</field>
            <field name="model">hue.course.department</field>
            <field name="arch" type="xml">
                <tree string="Course Department">
                    <field name="course_id" />
                    <field name="new_course_id" />
                    <field name="suitable_course_ids" column_invisible="1"/>
                    <field name="suitable_new_course_ids" column_invisible="1"/>
                </tree>
            </field>
        </record>
        <!--course_department_form_view-->
        <record id="course_department_form_view" model="ir.ui.view">
            <field name="name">hue course department</field>
            <field name="model">hue.course.department</field>
            <field name="arch" type="xml">
                <form string="student Course Department">
                    <header>
                        <button name="get_student_list" type="object" class="oe_highlight"
                                string="Get Students" groups="base.group_user"
                                help="Click to get student list"/>
                        <button name="button_done" string="Finish" class="oe_highlight" type="object"/>
                    </header>
                    <sheet>
                        <group col="4">
                              <field name="course_id" options="{'no_open': True,'no_quick_create':True,'no_create_edit':True}"/>
                              <field name="new_course_id" options="{'no_open': True,'no_quick_create':True,'no_create_edit':True}"/>
                              <field name="suitable_course_ids" invisible="1"/>
                              <field name="suitable_new_course_ids" invisible="1"/>
                        </group>
                        <notebook>
                            <page string="Students">
                                <field name="student_ids"
                                       options="{'no_open': True}">
                                    <tree limit="20" string="Students"  editable="bottom" create="0" delete="0"
                                          options="{'no_open': True}">                                              
                                        <field name="student_id"/>
                                        <field name="student_code"/>
                                        <field name="transfer_course"/>
                                        <field name="std_level"/>
                                        <field name="std_gpa"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
		<!--Actions-->
		<record id="student_course_department_action" model="ir.actions.act_window">
			<field name="name">student course department</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">hue.course.department</field>
			<field name="view_mode">tree,form</field>
		</record>
	</data>
</odoo>