<odoo>
	<data>
        <!--hue_service_tree_view-->
        <record id="hue_service_tree_view" model="ir.ui.view">
            <field name="name">hue service Tree</field>
            <field name="model">hue.service</field>
            <field name="arch" type="xml">
                <tree string="Service">        
                    <field name="name"/>
                    <field name="product_id"/><!--groups="hr_extention.group_service_manager"-->
                    <field name="amount"/>
                    <field name="category"/>
                    <field name="academic_years"/>
                    <field name="semester_id"/>
                </tree>
            </field>
        </record>
        <!--hue_service_form_view-->
        <record id="hue_service_form_view" model="ir.ui.view">
            <field name="name">hue service form</field>
            <field name="model">hue.service</field>
            <field name="arch" type="xml">
                <form string="Service">
                    <sheet> 
                        <group col="4">
                            <field name="name"/>
                            <field name="product_id"/><!--groups="hr_extention.group_service_manager"-->
                            <field name="amount"/>
                            <field name="category"/>
                            <field name="academic_years" options="{'no_open': True,'no_quick_create':True,'no_create_edit':True}"/>
                            <field name="semester_id" options="{'no_open': True,'no_quick_create':True,'no_create_edit':True}"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"
                            groups="base.group_user" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>
		<!--Actions-->
		<record id="hue_service_action" model="ir.actions.act_window">
			<field name="name">Service</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">hue.service</field>
			<field name="view_mode">tree,form</field>
		</record>
        <!--<field name="domain">[('tree_clo_acl_ids','=',1)]</field>-->
	</data>
</odoo>