<odoo>
	<data>
        <!--students_srvice_tree_view-->
        <record id="students_srvice_tree_view" model="ir.ui.view">
            <field name="name">hue student service</field>
            <field name="model">hue.student.service</field>
            <field name="arch" type="xml">
                <tree string="Student Service">        
                    <field name="student_id"/>
                    <field name="student_code"/>
                    <field name="service_id"/>
                    <field name="category"/>
                    <field name="academic_year_id"/>
                    <field name="semester_id"/>
                    <field name="faculty"/>
                    <field name="course"/>
                    <field name="count"/>
                    <field name="state"/>
                    <field name="inv_state"/>
                    <field name="inv_date"/>
                    <field name="inv_data" groups="hr_extention.group_service_manager"/>
                </tree>
            </field>
        </record>
        <!--students_srvice_form_view-->
        <record id="students_srvice_form_view" model="ir.ui.view">
            <field name="name">hue student service form</field>
            <field name="model">hue.student.service</field>
            <field name="arch" type="xml">
                <form string="Student Service">
                    <header> 
                    <button name="button_done" string="Done" class="oe_highlight" type="object" invisible="state=='done'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                    </header>
                    <sheet> 
                        <group col="4">
                            <field name="student_id"  options="{'no_open': True,'no_quick_create':True,'no_create_edit':True}"
                                   readonly="state=='done'"/>
                            <field name="student_code"/>
                            <field name="service_id" options="{'no_open': True,'no_quick_create':True,'no_create_edit':True}"
                                   readonly="state=='done'"/>
                            <field name="category"/>
                            <field name="academic_year_id"  options="{'no_open': True,'no_quick_create':True,'no_create_edit':True}"
                                   readonly="state=='done'"/>
                            <field name="semester_id"  options="{'no_open': True,'no_quick_create':True,'no_create_edit':True}"
                                   readonly="state=='done'"/>
                            <field name="faculty"/>
                            <field name="course"/>
                             <field name="count" readonly="state=='done'"/>
                            <field name="alumni_academic_year_id"/>
                            <field name="alumni_semester_id"/>
                            <field name="inv_state" readonly="1"/>
                            <field name="inv_date" readonly="1"/>
                            <field name="inv_data"  readonly="1" groups="hr_extention.group_service_manager"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"
                            groups="base.group_user" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>
		<!--Actions-->
		<record id="student_service_action" model="ir.actions.act_window">
			<field name="name">Student Service</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">hue.student.service</field>
			<field name="view_mode">tree,form</field>
            <!--<field name="domain">[('tree_clo_acl_ids','=',1)]</field>-->
		</record>
	</data>
</odoo>