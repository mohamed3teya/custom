<odoo>
	<data>
		<record id="hue_subject_reg_form" model="ir.ui.view">
            <field name="name">student registration</field>
            <field name="model">hue.student.registration</field>
            <field name="arch" type="xml">
                <form string="Stydent Registration">
                    <sheet>
					<header>
                        <field name="status" widget="statusbar"/>
                    </header>
                        <group col="4">
                            <field name="batch_id" options="{'no_open': True,'no_quick_create':True,'no_create_edit':True}"/>
                            <field name="course_id" options="{'no_open': True,'no_quick_create':True,'no_create_edit':True}"/>
                            <field name="student_id" options="{'no_open': True,'no_quick_create':True,'no_create_edit':True}" />
							<field name="session_id"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
		<!--Actions-->
		<record id="hue_student_registration_action" model="ir.actions.act_window">
			<field name="name">student registration</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">hue.student.registration</field>
			<field name="view_mode">tree,form</field>
		</record>
	</data>
</odoo>