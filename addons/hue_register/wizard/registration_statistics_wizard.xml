<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="registration_statistics_wizard_view" model="ir.ui.view">
            <field name="name">registration.statistics.wizard</field>
            <field name="model">registration.statistics.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group col="4">
                        <field name="course_id"/>
                        <field name="subject_id"/>
                        <field name="suitable_subject_ids" invisible="1"/>
                    </group>
                    <footer>
                        <button name="check_report" string="Search" type="object" default_focus="1"
                                class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_registration_statistics_report" model="ir.actions.act_window">
            <field name="name">Registration Statistics</field>
            <field name="res_model">registration.statistics.wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_id" ref="registration_statistics_wizard_view"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
