<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="registration_level_wizard_view" model="ir.ui.view">
			<field name="name">registration.level.wizard.view</field>
			<field name="model">registration.level.wizard</field>
			<field name="arch" type="xml">
				<form>
					<group col="4">
						<field name="course_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open':True}"/>
						<field name="batch_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open':True}"/>
						<field name="subject_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open':True}"/>
						<field name="suitable_course_ids" invisible="1"/>
                        <field name="suitable_batch_ids" invisible="1"/>
                        <field name="suitable_subject_ids" invisible="1"/>
                        <field name="show_std"/>
						<field name="show_missing" groups="HUE_openeducat_core.group_service_manager"/>
					</group>
					<footer>
						<button name="check_report" string="Search" type="object" default_focus="1" class="oe_highlight" />
						or
						<button string="Cancel" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>
		<record id="action_registration_level_wizard" model="ir.actions.act_window">
			<field name="name">Registration By Level</field>
			<field name="res_model">registration.level.wizard</field>
			<field name="type">ir.actions.act_window</field>
			<field name="view_id" ref="registration_level_wizard_view"/>
			<field name="target">new</field>
		</record>
	</data>
</odoo>
