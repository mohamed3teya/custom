<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <record id="view_op_session_tree" model="ir.ui.view">
            <field name="name">op.session.tree</field>
            <field name="model">op.session</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Sessions" editable="bottom" create="false" delete="false">
                    <field name="type" readonly="1" />
                    <field name="timing_id" readonly="1" />
                    <field name="to_timing_id" readonly="1" />
                    <field name="session_type" readonly="1"/>
                     <field name="course_id" readonly="1" />
                    <field name="subject_id" readonly="1" />
                    <field name="classroom_id" readonly="1" />
                    <field name="sub_classroom" readonly="1"/>
                    <field name="suitable_faculty_ids" invisible="1"/>
                    <field name="suitable_facility_ids" invisible="1"/>
                    <field name="facility_id" readonly="1"/>
                    <field name="faculty_ids" widget="many2many_tags" readonly="1"/>
                    <field name="q_faculty_ids" widget="many2many_tags"/>
                    <!-- <field name="teaching_assistant" widget="many2many_tags"/> -->
                </tree>
            </field>
        </record>
        <record id="view_op_session_form" model="ir.ui.view">
            <field name="name">op.session.form</field>
            <field name="model">op.session</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Session">
                    <sheet>
                        <group>
	                        <h1>
	                            <field name="name" />
	                        </h1>
	                    </group>
                        <group colspan="4" col="4">
                            <field name="timing_id" readonly="1" />
                            <!-- <field name="to_timing_id" readonly="1" /> -->
                            <field name="type" readonly="1" />
                            <field name="session_type" readonly="1" />
                            <field name="course_id" options='{"no_open": True}' readonly="1" />
                            <field name="subject_id" readonly="1" />
                            <field name="classroom_id" readonly="1" />
                            <field name="sub_classroom" readonly="1"/>
                            <field name="suitable_faculty_ids" invisible="1"/>
                            <field name="suitable_facility_ids" invisible="1"/>
                            <field name="faculty_ids" widget="many2many_tags" readonly="1"/>
                            <field name="q_faculty_ids" widget="many2many_tags"/>
                            <!-- <field name="teaching_assistant" widget="many2many_tags"/> -->
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"
                            groups="base.group_user" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>
        <!--hue_questionnaire_instructors_action-->
        <record id="hue_questionnaire_instructors_action" model="ir.actions.act_window">
            <field name="name">Questionnaire Instructors</field>
            <field name="res_model">op.session</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('tree_clo_acl_ids','=',1)]</field>
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('view_op_session_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_op_session_form')}),
            (0, 0, {'view_mode': 'kanban'})]"/>
        </record>
	</data>
</odoo>