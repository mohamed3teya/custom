<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <!--service_questionnaire_answers_tree_view-->
        <record id="service_questionnaire_answers_tree_view" model="ir.ui.view">
            <field name="name">service questionnaire answers</field>
            <field name="model">questionnaire.service.answers</field>
            <field name="arch" type="xml">
                <tree string="service questionnaire answers">
                    <field name="course_id" />
                    <field name="academic_year_id" />
                    <field name="semester_id" />
                    <field name="question_id" />
                    <field name="score_5" />
                    <field name="score_4" />
                    <field name="score_3" />
                    <field name="score_2" />
                    <field name="score_1" />
                </tree>
            </field>
        </record>
        <!--service_questionnaire_answers_form_view-->
        <record id="service_questionnaire_answers_form_view" model="ir.ui.view">
            <field name="name">service questionnaire answers</field>
            <field name="model">questionnaire.service.answers</field>
            <field name="arch" type="xml">
                <form string="service questionnaire answers">
                    <sheet>
                        <group col="4">
                        <field name="course_id" />
                        <field name="academic_year_id" />
                        <field name="semester_id" />
                        <field name="question_id" />
                        <field name="score_5" />
                        <field name="score_4" />
                        <field name="score_3" />
                        <field name="score_2" />
                        <field name="score_1" />
                        </group>  
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <!--students_questionnaire_answers_action-->
		<record model="ir.actions.act_window" id="service_questionnaire_answers_action">
			<field name="name">service questionnaire answers</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">questionnaire.service.answers</field>
			<field name="view_mode">tree,form</field>
		</record>
	</data>
</odoo>