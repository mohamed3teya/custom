<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!--view_hue_certificates_form_view-->
		<record id="view_hue_certificates_form_view" model="ir.ui.view">
			<field name="name">hue.certificates.form.view</field>
			<field name="model">hue.certificates</field>
			<field name="arch" type="xml">
				<form string="Financial Years">
					<sheet>
						<group>
							<group>
								<field name="name"/>
								<field name="enroll_code"/>
								<field name="certtype"/>
							</group>
							<group>
								<field name="d_id"/>
								<field name="certificate_active"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<!--act_open_op_certificate-->
		<record model="ir.actions.act_window" id="act_open_op_certificate">
			<field name="name">Certificate Types</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">hue.certificates</field>
			<field name="view_mode">tree,form</field>
		</record>
		<!-- action_get_hue_certificates -->
		<record model="ir.actions.server" id="action_get_hue_certificates">
			<field name="name">Get HUE Certificates</field>
			<field name="model_id" ref="HUE_openeducat_core.model_hue_certificates"/>
			<field name="binding_model_id" ref="HUE_openeducat_core.model_hue_certificates"/>
			<field name="binding_view_types">list</field>
			<field name="state">code</field>
			<field name="code">
			   action = records.action_get_hue_certificates()
			</field>
		</record>
		<!-- get_hue_certificates_action -->
		<record id="get_hue_certificates_action" model="ir.actions.server">
			<field name="name">Get Hue Certificates menu</field>
			<field name="model_id" ref="model_hue_certificates"/>
			<field name="state">code</field>
			<field name="code">model.get_hue_certificates_fun()</field>
		</record>
	</data>
</odoo>