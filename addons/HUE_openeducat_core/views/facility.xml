<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<data>
		<record id="view_hue_op_facility_form" model="ir.ui.view">
			<field name="name">Facilities</field>
			<field name="model">op.facility</field>
			<field name="inherit_id" ref="openeducat_facility.view_op_facility_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='code']" position="after">
					<field name="college_id"/>
					<field name="study_capacity"/>
					<field name="exam_capacity"/>
					<field name="college_only"/>
				</xpath>
			</field>
		</record>
		<record id="view_hue_op_facility_tree" model="ir.ui.view">
			<field name="name">Facilities</field>
			<field name="model">op.facility</field>
			<field name="inherit_id" ref="openeducat_facility.view_op_facility_tree"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='code']" position="after">
					<field name="college_id"/>
					<field name="college_only"/>
					<field name="study_capacity"/>
					<field name="exam_capacity"/>
				</xpath>
			</field>
		</record>
	</data>
</odoo>