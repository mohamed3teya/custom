<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!--view_hue_stu_status_form_view-->
		<record id="view_hue_stu_status_form_view" model="ir.ui.view">
			<field name="name">hue.stu.status.form.view</field>
			<field name="model">hue.std.data.status</field>
			<field name="arch" type="xml">
				<form string="HUE Student Status">
					<sheet>
						<group>
							<group>
								<field name="name"/>
								<field name="en_name"/>
							</group>
							<group>
								<field name="d_id"/>
								<field name="active_invoice"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<!--view_op_student_status_tree-->
		<record id="view_op_student_status_tree" model="ir.ui.view">
			<field name="name">Student Status</field>
			<field name="model">hue.std.data.status</field>
			<field name="arch" type="xml">
				<tree string="Student Status">
					<field name="name"/>
					<field name="en_name"/>
					<field name="active_invoice"/>
				</tree>
			</field>
		</record>
		<!--act_open_op_student_status-->
		<record model="ir.actions.act_window" id="act_open_op_student_status">
			<field name="name">Student Status</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">hue.std.data.status</field>
			<field name="view_mode">tree,form</field>
		</record>
		<!-- get_hue_certificates_action -->
		<record id="get_hue_student_status_action" model="ir.actions.server">
			<field name="name">Get Hue Student Status menu</field>
			<field name="model_id" ref="model_hue_std_data_status"/>
			<field name="state">code</field>
			<field name="code">model.get_hue_student_status_fun()</field>
		</record>
	</data>
</odoo>