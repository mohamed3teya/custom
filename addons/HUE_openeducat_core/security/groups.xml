<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Create a custom category -->
    <record id="module_category_advisor" model="ir.module.category">
        <field name="name">Advisor Permissions</field>
        <field name="sequence">10</field>
    </record>

    <!-- Create groups under this category -->
    <record id="group_advisor_admin" model="res.groups">
        <field name="name">Advisor Admin</field>
        <field name="category_id" ref="module_category_advisor"/>
    </record>
    <record id="group_service_manager" model="res.groups">
        <field name="name">Service Manager</field>
        <field name="category_id" ref="base.module_category_administration"/>
    </record>
</odoo>
