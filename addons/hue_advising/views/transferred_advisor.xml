<odoo>
	<data>
		<!--Transferred advisor tree view-->
		<record id="stransferred_advisor_tree" model="ir.ui.view">
			<field name="name">Transferred advisor</field>
			<field name="model">transferred.advisor</field>
			<field name="arch" type="xml">
				<tree string=" Transferred advisor">
					<field name="advisor" options="{'no_open': True,'no_quick_create':True,'no_create_edit':True}" />
					<field name="new_advisor" options="{'no_open': True,'no_quick_create':True,'no_create_edit':True}" />
					<field name="suitable_advisor_ids" column_invisible="1"/>
					<field name="fromdate" />
				</tree>
			</field>
		</record>
		<!--Transferred advisor form view-->
		<record id="transferred_advisor_view_form" model="ir.ui.view">
			<field name="name">Transferred advisor</field>
			<field name="model">transferred.advisor</field>
			<field name="arch" type="xml">
				<form string="Transferred advisor">
					<header>
						<button name="get_student_list" type="object" class="oe_highlight"
                                string="Get Students" groups="base.group_user"
                                help="Click to get student list"/>
						<button name="button_done" string="Change Faculty" class="oe_highlight" type="object" invisible="state=='done'"/>
						<field name="state" widget="statusbar" statusbar_visible="draft,done"/>
					</header>
					<sheet>
						<group col="4">
							<field name="advisor" options="{'no_open': True,'no_quick_create':True,'no_create_edit':True}" />
							<field name="new_advisor" options="{'no_open': True,'no_quick_create':True,'no_create_edit':True}" />
							<field name="suitable_advisor_ids" invisible="1"/>
							<field name="fromdate" />
						</group>
						<notebook>
							<page string="Student of Advisor">
								<field name="student_advisor_ids"
                                       options="{'no_open': True}">
									<tree limit="20" string="Student Without Advisor"  editable="bottom" create="0" delete="0"
                                          options="{'no_open': True}">
										<field name="student_id" string="Student"/>
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
						<field name="message_ids" widget="mail_thread"/>
					</div>
				</form>
			</field>
		</record>
		<!--Transferred advisor search view-->
		<record id="view_op_trans_advisor_search" model="ir.ui.view">
			<field name="name">transferred.advisor.search</field>
			<field name="model">transferred.advisor</field>
			<field name="priority" eval="8"/>
			<field name="arch" type="xml">
				<search string="Advisor">
					<field string="Advisor" name="new_advisor" />
					<newline/>
				</search>
			</field>
		</record>
		<!--Actions-->
		<record id="transferred_advisor_action" model="ir.actions.act_window">
			<field name="name">Transferred advisor</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">transferred.advisor</field>
			<field name="view_mode">tree,form</field>
		</record>
	</data>
</odoo>