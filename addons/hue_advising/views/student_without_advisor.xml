<odoo>
	<data>
        <!--student without advisor tree view-->
		<record id="student_without_advisor_tree" model="ir.ui.view">
			<field name="name">student without advisor</field>
			<field name="model">student.without.advisor</field>
			<field name="arch" type="xml">
				<tree string=" student without advisor">
					<field name="advisor" options="{'no_open': True,'no_quick_create':True,'no_create_edit':True}" />
					<field name="suitable_advisor_ids" column_invisible="1"/>
					<field name="fromdate"/>
					<field name="course_id"/>
					<field name="advisor_count"/>
				</tree>
			</field>
		</record>
        <!--student without advisor form view-->
		<record id="student_without_advisor_form" model="ir.ui.view">
			<field name="name">student without advisor</field>
			<field name="model">student.without.advisor</field>
			<field name="arch" type="xml">
				<form string="student without advisor">
					<header>
						<button name="get_student_list" type="object" class="oe_highlight"
                                string="Get Students" groups="base.group_user"
                                help="Click to get student list"/>
						<button name="button_done" string="Finish" class="oe_highlight" type="object" invisible="state=='done'"/>
						<field name="state" widget="statusbar" statusbar_visible="draft,done"/>
					</header>
					<sheet>
						<group col="4">
							<field name="advisor" options="{'no_open': True,'no_quick_create':True,'no_create_edit':True}"  />
							<field name="suitable_advisor_ids" invisible="1"/>
							<field name="fromdate"/>
							<field name="course_id" options="{'no_open': True,'no_quick_create':True,'no_create_edit':True}"/>
							<field name="advisor_count"/>
						</group>
						<notebook>
							<page string="Student Without Advisor">
								<field name="student_no_advisor_ids"
                                       options="{'no_open': True}">
									<tree limit="20" string="Student Without Advisor"  editable="bottom" create="0" delete="0"
                                          options="{'no_open': True}">
										<field name="student_id" string="Student"/>
										<field name="code" string="Code"/>
										<field name="course_id" string="Course"/>
										<field name="std_level"/>
										<field name="std_gpa"/>
										<field name="done" string="Done" />
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
						<field name="message_ids" widget="mail_thread"/>
					</div>
				</form>
			</field>
		</record>
		<!--Actions-->
		<record id="student_without_advisor_action" model="ir.actions.act_window">
			<field name="name">student without advisor</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">student.without.advisor</field>
			<field name="view_mode">tree,form</field>
		</record>
	</data>
</odoo>